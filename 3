import time

# Recursion ka istemaal karke search karna
def binary_search(arr, target, low, high):
    # Base Case (Rukne ki shart): Jab search area khatam ho jaye
    if low > high:
        return -1 
    
    # List ko beech se aadha karna
    mid = (low + high) // 2 
    
    if arr[mid] == target:
        return mid # Mil gaya
    elif arr[mid] < target:
        # Dayin taraf search karo
        return binary_search(arr, target, mid + 1, high)
    else:
        # Bayin taraf search karo
        return binary_search(arr, target, low, mid - 1)

# --- Main Execution ---
sorted_list = [2, 5, 8, 12, 16, 23, 38, 56, 72, 91,97,299,83,3,2,2,3,3,3,4,5,6,7,8,] # Sorted list hona zaruri hai
target_value = 5
target_value_missing = 55 # Jo list mein nahi hai

print("ğŸ§  ADVANCED ALGORITHM:1hldydooyuuyyosxyor3 BINARY SEARCH ğŸ§ ")
print(f"List: {sorted_list}")
print("---------------------------------------")

# Target 1: Milnewala number
result1 = binary_search(sorted_list, target_value, 0, len(sorted_list) - 1)

if result1 != -1:
    print(f"âœ… Target {target_value} Index {result1} par mila.")
else:
    print(f"âŒ Target {target_value} nahi mila.")

# Target 2: Na milnewala number
result2 = binary_search(sorted_list, target_value_missing, 0, len(sorted_list) - 1)
if result2 != -1:
    print(f"âœ… Target {target_value_missing} Index {result2} par mila.")
else:
    print(f"âŒ Target {target_value_missing} nahi mila.")
