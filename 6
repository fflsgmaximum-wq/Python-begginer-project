import pandas as pd

print("ğŸ“Š Free Fire Player Data Analysis ğŸ“Š")
print("------------------------------------")

try:
    # Pandas library ka use karke CSV file ko padhna
    data = pd.read_csv('player_scores.csv')

    # Data ko screen par dikhana
    print("Data:\n", data)

    # Pandas se 'Score' column ka average nikalna
    average_score = data['Score'].mean()

    print("\n------------------------------------")
    print(f"âœ… Sabhi players ka Average Score hai: {average_score:.2f}")
    print("------------------------------------")

except FileNotFoundError:
    print("âŒ ERROR: 'player_scores.csv' file nahi mili. Check karein ki woh same folder mein hai.")
except Exception as e:
    print(f"âŒ ERROR in analysis: {e}")
